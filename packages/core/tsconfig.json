{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "module": "ESNext",
        "types": ["node", "jest"],
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/dts",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "paths": {
            "@root/*": ["./src/*"]
        }
    },
    "include": ["src"]
}
