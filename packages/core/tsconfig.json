{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "moduleResolution": "node",
        "baseUrl": ".",
        "module": "ESNext",
        "types": ["node", "jest"],
        "lib": ["ESNext", "DOM"],
        "outDir": "./dist",
        "strict": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "declarationDir": "./dist/dts",
        "resolveJsonModule": true,
        "sourceMap": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
